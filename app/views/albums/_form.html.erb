<% form_for @album, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :condition %><br />
    <%= f.select :condition, Album::ALBUM_CONDITIONS %>
  </p>
  <p>
    <%= f.label :artist_id %><br />
    <%= f.select :artist_id, artist_options(@album.artist) %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <% f.fields_for(:tracks) do |track_form| %>
      <%= track_form.label :name %>
      <%= track_form.text_field :name %>
    <br />
      <%= track_form.label :audio, "Select music file:" %>
      <%= track_form.file_field :audio %>
    <% end %>
  </p>
  <p>
    
    
    <%= link_to icon("Search"), albums_path %>
    <%= link_to(icon("Back"), @album) %>
    <%= f.submit "Submit", :class => "save", :value => "" %>
    
  </p>
<% end %>
