<% title "Manage your Albums" %>

<table class="list_table">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Condition</th>
    <th>Artist</th>
    <th>Actions</th>
    
  </tr>
  <% for album in @albums %>
    <tr>
      <td><%=h album.title %></td>
      <td><%=h album.year %></td>
      <td><%=h album.condition %></td>
      <td><%= artist_link album.artist %></td>
      <td><%= link_to "Show", album %> | 
          <%= link_to "Edit", edit_album_path(album) %> | 
          <%= link_to "Destroy", album, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Album", new_album_path %></p>
