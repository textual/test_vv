
<%# content_for :head do %>
  <script type="text/javascript" src="/javascripts/jquery.js"></script>
  <script type="text/javascript" src="/javascripts/thickbox.js"></script>
  <style type="text/css" media="all">@import "/stylesheets/thickbox.css";</style>
<%# end %>


<% title h(@album.title) %>

<a class="thickbox" href="http://www.google.com/intl/en_ALL/images/logo.gif"><img src="http://www.google.com/intl/en_ALL/images/logo.gif" /></a>

<p>
  <strong>Year:</strong>
  <%=h @album.year %>
</p>
<p>
  <strong>Condition:</strong>
  <%=h @album.condition %>
</p>
<p>
  <strong>Artist:</strong>
  <%= artist_link(@album.artist) %>
</p>

<p>
  <%= link_to "Edit", edit_album_path(@album) %> |
  <%= link_to "Destroy", @album, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", albums_path %>
</p>
