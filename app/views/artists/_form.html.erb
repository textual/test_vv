<% form_for @artist do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <table id="albums" class="list_table">
    <tr>
      <th>Album</th>
      <th>Year</th>
      <th>Condition</th>
      <th></th>
    </tr>
    <% f.fields_for(:albums) do |album_form| %>
      <%= render :partial => 'album_form', :locals => {:album_form => album_form, :id => rand(1000000000000)} %>
    <% end %>
  </table>
  
	<%= button_to_add_an_album(f) %>
  <p>
    <%= link_to icon("Search"), artists_path %>
    <%= link_to(icon("Back"), @artist) %>
    <%= f.submit "Submit", :class => "save", :value => "" %>
  </p>
<% end %>
