<% title "Artists" %>

<table class='list_table'>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% for artist in @artists %>
    <tr>
      <td><%= artist_link(artist) %></td>
      <td>
        <%= link_to "Edit", edit_artist_path(artist) %> | 
        <%= link_to "Destroy", artist, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Artist", new_artist_path %></p>
